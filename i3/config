# Volume control
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks

# Sreen brightness controls
# enable passwordless sudo for ybacklight. echo "soren ALL=NOPASSWD: /usr/bin/ybacklight" > /etc/sudoers.d/ybacklight
bindsym XF86MonBrightnessUp exec sudo ybacklight -inc 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec sudo ybacklight -dec 5 # decrease screen brightness


# Shutdown, reboot, lock screen
set $Locker i3lock && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id ! sudo killall -SIGINT openconnect && i3-msg exit, mode "default"
    bindsym s exec --no-startup-id ! sudo killall -SIGINT openconnect && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id ! sudo killall -SIGINT openconnect && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id ! sudo killall -SIGINT openconnect && systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ! sudo killall -SIGINT openconnect && systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+Escape mode "$mode_system"


# Floating windows
for_window [window_role="task_dialog|bubble|page-info|Preferences|pop-up"] floating enable
for_window [window_role="Open Files"] floating enable sticky
for_window [window_role="File Operation Progress"] floating enable sticky
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
